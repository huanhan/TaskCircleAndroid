<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dialog"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/mCvContent"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <xin.lrvik.easybanner.EasyViewPager
                android:id="@+id/mEvpTaskStep"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </xin.lrvik.easybanner.EasyViewPager>


            <xin.lrvik.easybanner.indicator.EasyDotIndicator
                android:id="@+id/mEdiTaskStep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                app:sel_color="@color/colorPrimary" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <ImageView
        android:id="@+id/mIvClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_above="@id/mCvContent"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_close_red_24dp" />
</RelativeLayout>