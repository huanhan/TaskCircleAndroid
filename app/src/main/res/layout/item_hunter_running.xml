<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:padding="3dp"
    app:cardCornerRadius="5dp">

    <TextView
        android:id="@+id/mTvState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="5dp"
        android:text="状态"
        android:textColor="#E65B2A"
        android:textSize="12sp" />


    <ImageView
        android:id="@+id/mBtWarning"
        android:layout_width="30dp"
        android:layout_gravity="center_vertical|right"
        android:layout_height="30dp"
        android:layout_marginRight="55dp"
        android:src="@mipmap/warning" />

    <ImageView
        android:id="@+id/mBtChat"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="15dp"
        android:src="@mipmap/chat" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="3dp">


            <ImageView
                android:id="@+id/mIvIcon"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/def" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp">

                    <TextView
                        android:id="@+id/mTvHunterName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:lines="1"
                        android:text="猎刃名字"
                        android:textColor="@color/common_black"
                        android:textSize="15sp" />
                </LinearLayout>


                <TextView
                    android:id="@+id/mTvContext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:padding="2dp"
                    android:text="当前完成步骤"
                    android:textColor="@color/deep_gray"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/mReleaseMsg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="接取时间："
                            android:textColor="@color/common_black"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/mTvTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2019年1月1日"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <View style="@style/DividerFixedHeight" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:padding="5dp">

            <Button
                android:id="@+id/mBtAuditSuccess"
                style="@style/TaskButton"
                android:text="审核通过" />

            <Button
                android:id="@+id/mBtAuditFailure"
                style="@style/TaskButton"
                android:text="审核失败" />

            <Button
                android:id="@+id/mBtAbandonPass"
                style="@style/TaskButton"
                android:text="放弃通过" />

            <Button
                android:id="@+id/mBtAbandonNotPass"
                style="@style/TaskButton"
                android:text="放弃不通过" />


        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>