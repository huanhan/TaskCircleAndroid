<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="@android:color/white"
            android:minHeight="80dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mIvIcon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/icon_default_user" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="13dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mTvtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="步骤标题"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mTvContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:text="内容"
                    android:textColor="@color/text_dark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/mBtSubmit"
                    style="@style/TaskButton"
                    android:layout_gravity="center_vertical"
                    android:text="完成"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/mBtModify"
                    style="@style/TaskButton"
                    android:layout_gravity="center_vertical"
                    android:text="修改"
                    android:visibility="visible" />
            </LinearLayout>



            <ImageView
                android:id="@+id/mIvFlag"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:scaleType="center"
                android:src="@drawable/ic_beenhere_black_24dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/mTvStep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:text="步骤1"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp" />
    </RelativeLayout>



    <LinearLayout
        android:id="@+id/mLlHunterMarker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            style="@style/DividerFixedHeight"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_white"
            android:padding="5dp">

            <TextView
                android:id="@+id/mTvContextTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:text="完成情况：" />

            <TextView
                android:id="@+id/mTvContext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/mTvContextTag"
                android:background="@null"
                android:text="情况说明" />

        </RelativeLayout>

        <View
            style="@style/DividerFixedHeight"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_white"
            android:padding="5dp">

            <TextView
                android:id="@+id/mTvTitleTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:text="备注：" />

            <TextView
                android:id="@+id/mTvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/mTvTitleTag"
                android:background="@null"
                android:text="备注" />

        </RelativeLayout>
    </LinearLayout>

    <View style="@style/DividerFixedHeight" />
</LinearLayout>